
<div id="race_bar" style="cursor: pointer;" onclick="window.location='<%= edit_user_race_path(current_user, race_item.id) %>';">
  <div id="race_text" style="width:100%;"> 
    <div id="race_title">
      <h3><%= race_item.race_name %></h3>

      <p><%= race_item.distance %> </p>
      <%= I18n.l(race_item.race_date, format: :date) %>
      <%= race_item.position %>
      <% unless race_item.finish_time.nil? || race_item.finish_time.strftime("%H:%M:%S") == "00:00:00" %>
        <%= I18n.l(race_item.finish_time, format: :time) %>
      <% end %>  
    </div> 
  </div>
</div>

    