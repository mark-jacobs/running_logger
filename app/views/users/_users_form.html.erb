<%= form_for(@user) do |f| %>
  <%= render 'shared/error_messages', object: @user %>
   
  <p><%= f.label :name %></p>    
  <p><%= f.text_field :name %></p>

  <p><%= f.label :email %></p>
  <p><%= f.text_field :email %></p>

  <p><%= f.label :password %></p>
  <p><%= f.password_field :password %></p>

  <p><%= f.label :password_confirmation, "Confirm Password" %></p>
  <p><%= f.password_field :password_confirmation %></p>
  <% if !@user.id.nil? %>
    <p><%= f.submit "Save changes", class: "btn btn-lg btn-custom" %></p>
  <% else %>
    <p><%= f.submit "Create account", class: "btn btn-lg btn-custom" %></p>
  <% end %>
<% end %>