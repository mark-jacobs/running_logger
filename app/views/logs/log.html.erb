
<div id="container1">
  <div id="prof_head">
    <h2>Weekly log</h2>
  </div>
  <div id="nav_icons" style="width:100%; text-align:center; padding-top: 10%; padding-bottom: 1%;">
    <%= link_to "<<", "/users/#{@user[:id]}/log/#{@period - 1}", class: "btn btn-large btn-custom"%>
    <%= link_to ">>", "/users/#{@user[:id]}/log/#{@period + 1}", class: "btn btn-large btn-custom" %>
  </div>
  
  <div id = "log_box">
    <div id="log_row">
      <div id="plan_head">PLAN</div>
      <div id="log_head">LOG</div>
    </div>
    <div id="log_row">
      <p>
        <div id="log">DAY</div>
        <div id="log1">DATE</div>
        <div id="log3">WORKOUT</div>
        <div id="log5">Q</div>
        <div id="log4">MILES</div>
        <div id="log3">WORKOUT</div>
        <div id="log5">Q</div>
        <div id="log4">MILES</div>
        <div id="log6">TIME</div>
        <div id="log7">CALORIES</div>
        <div id ="notes">NOTES</div>
        <br>
      </p>
    </div>
    <% 7.times do |x| %>
    <div id="log_row">
      <p>
        <div id="log">
        <% if @logs[x].nil? %>
          <%= link_to (@start  + x.day).strftime("%^a "), 
                           "/newlog/#{@user[:id]}/#{@period}/#{x + 1}",
                           class: "btn btn-xs btn-custom2" %>
        <% else %>
          <%= link_to (@start  + x.day).strftime("%^a "), 
                           "/editlog/#{@user[:id]}/#{@period}/#{x + 1}",
                           class: "btn btn-xs btn-custom2" %>
        <% end %>
        </div>
        <div id="log1"><%= (@start + x.day).strftime("%d/%m/%y") %></div>
        <div id="log3"><%=  if @logs[x].nil? 
                              "Off"  
                            else  
                              @logs[x].plan_workout
                            end %>&nbsp</div>
        <div id="log5"><%= "Q"  unless @logs[x].nil? || !@logs[x].plan_q  %>&nbsp</div>
        <div id="log4"><%= @logs[x].plan_miles unless @logs[x].nil? %>&nbsp</div>
        <div id="log3"><%= @logs[x].log_workout unless @logs[x].nil? %>&nbsp</div>
        <div id="log5"><%= "Q"  unless @logs[x].nil? || !@logs[x].log_q %>&nbsp</div>
        <div id="log4"><%= @logs[x].log_miles unless @logs[x].nil? %>&nbsp</div>
        <div id="log6"><%= @logs[x].log_time.strftime("%H:%M:%S") unless @logs[x].nil? %>&nbsp</div>
        <div id="log7"><%= @logs[x].log_calories unless @logs[x].nil? %>&nbsp</div>
        <div id="notes"><%= @logs[x].notes unless @logs[x].nil? %>&nbsp</div>
    </div>
    <% end %>
  </div>

  <div id="log-row">
      <% @planned_miles = 0 %>
      <% @logged_miles = 0 %>
      <% @logged_calories = 0 %>
      <% 7.times do |x| %>
        <% @planned_miles += @logs[x].plan_miles unless @logs[x].nil? || @logs[x].plan_miles.nil? %>
        <% @logged_miles += @logs[x].log_miles unless @logs[x].nil? || @logs[x].log_miles.nil? %>
        <% @logged_calories += @logs[x].log_calories unless @logs[x].nil? || @logs[x].log_calories.nil? %>
      <% end %>

      <div id="plan_head">
        Planned miles: <%= @planned_miles.round(2) %>
      </div>
      <div id="log_head">
        Logged miles: <%= @logged_miles.round(2) %>,
        logged calories: <%= @logged_calories %>
      </div> 
  </div>
</div>

